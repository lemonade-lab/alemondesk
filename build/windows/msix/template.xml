<?xml version="1.0" encoding="utf-8"?>
<MsixPackagingToolTemplate
    xmlns="http://schemas.microsoft.com/msix/packaging/msixpackagingtool/template/2022">
    <Settings
        AllowTelemetry="false"
        ApplyACLsToPackageFiles="true"
        GenerateCommandLineFile="true"
        AllowPromptForPassword="false">
    </Settings>
    <Installer
        Path="ALemonDesk"
        Arguments=""
        InstallLocation="C:\Program Files\ALemonDesk\ALemonDesk">
    </Installer>
    <PackageInformation
        PackageName="ALemonDesk"
        PackageDisplayName="ALemonDesk"
        PublisherName="CN=ALemonDesk"
        PublisherDisplayName="ALemonDesk"
        Version="0.1.0.0"
        PackageDescription="ALemonDesk Description">
        <Capabilities>
            <Capability Name="runFullTrust" />
            
        </Capabilities>
        <Applications>
            <Application
                Id="com.wails.ALemonDesk"
                Description="ALemonDesk Description"
                DisplayName="ALemonDesk"
                ExecutableName="ALemonDesk"
                EntryPoint="Windows.FullTrustApplication">
                
            </Application>
        </Applications>
        <Resources>
            <Resource Language="en-us" />
        </Resources>
        <Dependencies>
            <TargetDeviceFamily Name="Windows.Desktop" MinVersion="10.0.17763.0" MaxVersionTested="10.0.19041.0" />
        </Dependencies>
        <Properties>
            <Framework>false</Framework>
            <DisplayName>ALemonDesk</DisplayName>
            <PublisherDisplayName>ALemonDesk</PublisherDisplayName>
            <Description>ALemonDesk Description</Description>
            <Logo>Assets\AppIcon.png</Logo>
        </Properties>
    </PackageInformation>
    <SaveLocation PackagePath="ALemonDesk.msix" />
    <PackageIntegrity>
        <CertificatePath></CertificatePath>
    </PackageIntegrity>
</MsixPackagingToolTemplate>
